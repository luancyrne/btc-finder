{
  "name": "btc",
  "version": "1.1.0",
  "description": "Naive code to find bitcoins, for educational purposes",
  "main": "./src/start.js",
  "scripts": {
    "start": "electron ./src/start.js",
    "terminal": "node ./src/main.js",
    "dev": "nodemon --exec electron ./src/start.js",
    "build": "electron-builder",
    "dist": "electron-builder --win --linux --mac"
  },
  "type": "commonjs",
  "author": "Investidor Internacional",
  "license": "ISC",
  "dependencies": {
    "coinkey": "^3.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.3",
    "electron": "^31.0.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.github.btcfinder",
    "icon": "./src/ui/assets/images/icon.ico",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "src/**/*"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "msi",
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ]
    }
  }
}